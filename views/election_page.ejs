<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <script src="https://cdn.tailwindcss.com"></script>
    <title><%= title %></title>
    <script>
        var token = document.querySelector('meta[name="csrf-token"]').getAttribute("content");
        function endElection() {
            let electionID = <%= id %>;
            fetch(`/elections/${electionID}/end`, {
                method: "put",
                headers: {"Content-Type":"application/json"},
                body: JSON.stringify({
                    "_csrf":token,
                })
            }).then((res)=>{
                if (res.ok) {
                    window.location.replace(`/elections/${electionID}`);
                }
            }).catch((err)=> console.error(err))
        }
        function copyURL() {
            let url = "<%= urlString %>"
            let full_url = "https://e-vote.onrender.com/e/"+url;
            navigator.clipboard.writeText(full_url);
        }
    </script>
</head>
<body class="bg-gray-900">
    <%- include('header.ejs') %>
    <div class="rounded-lg px-6 py-2">
    <% if (messages && messages.error && messages.error.length > 0) { %>
        <% for(var i=0; i<messages.error.length; i++) { %>
            <p class="bg-gray-600 text-white my-3 list-none rounded-md px-4 py-2"><%= messages.error[i] %></p>
        <% } %>
    <% } %>
    </div>
    <div class="flex gap-1 mx-10 mt-6 text-white">
        <span>></span>
        <a href="/elections" class="text-gray-400 hover:text-white transition-all">All Elections</a>
        <span>></span>
    </div>
    <div class="my-6 mx-10 text-white">
        <h3 class="text-6xl my-7 font-medium"><%= title %></h3>
        <% if (running) { %>
            <div class="py-2">
                <h4 class="text-3xl my-2 font-medium text-gray-400">Your election is launched!</h4>
                <h2 class="my-2 text-xl flex gap-1 text-gray-400">Voters can vote from this url:</h2>
                <div class="flex gap-2 items-center">
                    <a href="/e/<%= urlString %>/" class="py-1 hover:text-gray-400 hover:underline text-white">https://e-vote.onrender.com/e/<%= urlString %></a>
                    <div class="hover:text-gray-600 cursor-pointer transition-all" onclick="copyURL()">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 7.5V6.108c0-1.135.845-2.098 1.976-2.192.373-.03.748-.057 1.123-.08M15.75 18H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08M15.75 18.75v-1.875a3.375 3.375 0 00-3.375-3.375h-1.5a1.125 1.125 0 01-1.125-1.125v-1.5A3.375 3.375 0 006.375 7.5H5.25m11.9-3.664A2.251 2.251 0 0015 2.25h-1.5a2.251 2.251 0 00-2.15 1.586m5.8 0c.065.21.1.433.1.664v.75h-6V4.5c0-.231.035-.454.1-.664M6.75 7.5H4.875c-.621 0-1.125.504-1.125 1.125v12c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V16.5a9 9 0 00-9-9z" />
                        </svg>                      
                    </div>
                </div>
            </div>
        <% } %>
        <div class="mt-4">
            <h2 class="my-4 text-2xl text-gray-400 flex gap-2">Your election has <span class="text-white"> <%= nq %> </span> questions in the ballot.</h2>
            <% if (!running) { %>
                <div class="flex gap-2 items-center hover:text-gray-400 hover:underline">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6h9.75M10.5 6a1.5 1.5 0 11-3 0m3 0a1.5 1.5 0 10-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m-9.75 0h9.75" />
                    </svg>
                    <a href="/elections/<%= id %>/questions" class=" text-lg ">Manage questions</a>
                </div>
            <% } %>
        </div>
        <div class="mb-6 bt-4">
            <h2 class="my-4 text-2xl text-gray-400 flex gap-2">Your election has <span class="text-white"> <%= nv %> </span> registered voters.</h2>
            <div class="flex gap-2 items-center hover:text-gray-400 hover:underline">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.05 4.575a1.575 1.575 0 10-3.15 0v3m3.15-3v-1.5a1.575 1.575 0 013.15 0v1.5m-3.15 0l.075 5.925m3.075.75V4.575m0 0a1.575 1.575 0 013.15 0V15M6.9 7.575a1.575 1.575 0 10-3.15 0v8.175a6.75 6.75 0 006.75 6.75h2.018a5.25 5.25 0 003.712-1.538l1.732-1.732a5.25 5.25 0 001.538-3.712l.003-2.024a.668.668 0 01.198-.471 1.575 1.575 0 10-2.228-2.228 3.818 3.818 0 00-1.12 2.687M6.9 7.575V12m6.27 4.318A4.49 4.49 0 0116.35 15m.002 0h-.002" />
                </svg>
                <a href="/elections/<%= id %>/voters" class="hover:text-gray-400 hover:underline text-lg pr-6">Manage voters</a>
            </div>
        </div>
        <% if (!running) { %>
            <div onclick="location.href='/elections/<%= id %>/preview'" class="cursor-pointer flex items-center gap-2 mt-6 w-fit bg-gray-500 border border-white text-white py-2 px-6 rounded-md hover:bg-white hover:text-black transition-all ease-linear text-xl">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>                  
                <a href="/elections/<%= id %>/preview" >Preview & Launch election</a>
            </div>
        <% } %>
        <% if (running) { %>
            <div class="flex gap-2">
                <div onclick="location.href='/elections/<%= id %>/results'" class="cursor-pointer py-2 flex items-center gap-2 w-fit bg-gray-500 border border-white text-white px-6 rounded-md hover:bg-white hover:text-black transition-all ease-linear">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>                      
                    <a href="/elections/<%= id %>/results">Preview results</a>
                </div>
                <button onclick="endElection()" class="py-2 flex gap-2 items-center gap-2 w-fit bg-gray-500 border border-white text-white px-6 rounded-md hover:bg-white hover:text-black transition-all ease-linear">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                      </svg>                      
                    <p>End election</p>
                </button>
            </div>
        <% } %>
    </div>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
</body>
</html>