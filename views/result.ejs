<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        let ctx = null;
        let optionsL = null;
        let optionsCount = null;
    </script>
    <title><%= electionName %> - Results</title>
</head>
<body class="bg-gray-50">
    <nav>
        <div class="container flex flex-wrap items-center justify-between mx-auto">
          <a href="/" class="py-2 px-4 flex items-center">
            <span class="self-center text-xl font-semibold whitespace-nowrap text-purple-800">E-Vote</span>
          </a>
        </div>
    </nav>
    <div class=" flex  text-white antialiased flex-col  overflow-hidden py-6 sm:py-12 px-20">
      <div class="w-full">
          <div>
              <% if (messages && messages.error && messages.error.length > 0) { %>
                  <% for(var i=0; i<messages.error.length; i++) { %>
                      <p class="bg-gray-600 my-3 list-none rounded-md px-4 py-2"><%= messages.error[i] %></p>
                  <% } %>
              <% } %>
          </div>
          <div class="flex flex-col gap-6 divide-y-2 divide-white">
              <span class="text-5xl font-light mb-8"><%= electionName %> - Results</span>
              <div class="flex py-10">
              <span class="text-3xl font-semibold ">Voting status:</span>
              <div class="w-60">
                  <canvas class="object-contain" id="votes"></canvas>
                </div>
                <script>
                  ctx = document.getElementById('votes');
                  completed = "<%= noOfVoted %>";
                  pending = "<%= noOfVotePending %>";
                  new Chart(ctx, {
                    type: 'pie',
                    data: {
                      labels: ["Completed voters", "Pending voters"],
                      datasets: [{
                        data: [completed,pending],
                        backgroundColor: [
                          'rgb(129, 140, 248)',
                          'rgb(55, 48, 163)'
                          ],
                      }]
                    }
                  });
                </script>
                </div>
              <ol class="list-decimal mb-5 text-3xl">
                  <% for(let i=0; i<questions.length; i++) { %>
                      <li class="my-2">
                          <div class="flex justify-between my-10">
                          <div class="px-2 py-1">
                              <h3 class="text-3xl my-2"><%= questions[i].question %></h3>
                              <p class="text-lg my-2"><%= questions[i].description %></p>
                              <div class="ml-8">
                                  <ol class="list-none">
                                      <% for(let j=0; j<options[i].length; j++) { %>
                                              <li class="option-item mt-2 text-2xl">
                                                  <label class="ml-2 text-xl px-1 my-2 text-gray-400"><span class="text-white"><%= options[i][j].option %></span> got <span class="text-white"><%= optionsCount[i][j] %></span> votes</label>
                                              </li>
                                      <% } %>
                                  </ol>
                              </div>
                          </div>
                          <div class="w-80">
                              <canvas class="object-contain" id="myChart-<%= i %>"></canvas>
                            </div>
                          </div>
                            <script>
                              ctx = document.getElementById('myChart-<%= i %>');
                              optionsCount = "<%= optionsCount[i] %>".split(",");
                              optionsL = "<%= optionLabels[i] %>".split(",");
                              new Chart(ctx, {
                                type: 'bar',
                                data: {
                                  labels: optionsL,
                                  datasets: [{
                                    label: '# of Votes',
                                    data: optionsCount,
                                    borderWidth: 1,
                                    backgroundColor: 'rgb(129, 140, 248)',
                                  }]
                                },
                                options: {
                                  scales: {
                                    y: {
                                      beginAtZero: true,
                                      max: "<%= totalVoters %>"
                                    }
                                  }
                                }
                              });
                            </script>
                      </li>
                  <% } %>
              </ol>
          </div>
      </div>
  </div>
</body>
</html>